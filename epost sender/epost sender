import smtplib
from email.mime.text import MIMEText

sender_email = "petitpatrickpetit@gmail.com"
receiver_email = "petitpatrickpetit@gmail.com"
app_password = "DITT_APP_PASSORD_HER"

subject = "ğŸ“ˆ AI-BOT TESTVARSEL"
body = "Hei Patrick!\n\nDette er en test fra din egen bot.\nE-post fungerer 100% ğŸš€"

msg = MIMEText(body)
msg["Subject"] = subject
msg["From"] = sender_email
msg["To"] = receiver_email

try:
    with smtplib.SMTP_SSL("smtp.gmail.com", 465) as server:
        server.login(sender_email, app_password)
        server.send_message(msg)
    print("âœ… E-post sendt!")
except Exception as e:
    print("âŒ Noe gikk galt:", e)
